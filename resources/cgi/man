#!/usr/bin/env rc

if (~ $#QUERY_STRING 0) {
	echo '10 manpage:'
	exit 0
}

query=`{echo $QUERY_STRING | sed 's/%20/ /g'}

echo '20 text/plain;charset=utf-8'
echo '# OpenBSD 6.8'
echo
echo % man $query
echo
if ( ! man -Tutf8 -- $query | col -b | sed '$d' )
	echo man: No entry for $"query in the manual.
